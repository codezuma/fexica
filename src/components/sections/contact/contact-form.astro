---
import MessageIcon from '../../../icons/message-icon.astro'
import MapPinIcon from '../../../icons/map-pin-icon.astro'
import PhoneIcon from '../../../icons/phone-icon.astro'
---
<section class="container-main relative mx-auto px-0 min-h-[calc(100vh-80px)] mt-20 flex justify-end">
    <aside class="bg-primary left-0 fixed h-screen text-white hidden md:block w-1/3 p-12">
        <header class="mb-8">
            <h2 class="font-semibold text-2xl mb-3">Get in touch</h2>
            <p class="text-lg leading-snug text-gray-200">Weâ€™ love to hear from you. Our friendly team is always here to chat.</p>
        </header>
        <main class="flex gap-8 flex-col">
            <div class="flex gap-4 items-start">
                <MessageIcon/>
                <div>
                    <h3 class="text-xl mb-2">Chat to us</h3>
                    <p class="text-gray-200 mb-5">Our friendly team is here to help.</p>
                    <a href="" class="font-medium">hi@untitledui.com</a>
                </div>
            </div>
            <div class="flex gap-4 items-start">
                <MapPinIcon/>
                <div>
                    <h3 class="text-xl mb-2">Office</h3>
                    <p class="text-gray-200 mb-5">Come say hello at our office HQ.</p>
                    <a href="" class="font-medium">100 Smith Street <br/>Collingwood VIC 3066 AU</a>
                </div>
            </div>
            <div class="flex gap-4 items-start">
                <PhoneIcon/>
                <div>
                    <h3 class="text-xl mb-2">Phone</h3>
                    <p class="text-gray-200 mb-5">Mon-Fri from 8am to 5pm.</p>
                    <a href="" class="font-medium">+1 (555) 000-0000</a>
                </div>
            </div>

        </main>
    </aside>
    <div class="md:w-2/3  px-4 w-full flex items-center py-24 flex-col">
        <div class="flex w-full md:w-2/3 flex-col ">
            <header>
                <h2 class="md:text-4xl md:mb-5 mb-3 font-semibold text-gray-900 text-3xl">Level up your brand</h2>
                <p>You can reach us anytime via &nbsp;<a href="" class="text-primary">hi@untitledui.com</a></p>
            </header>
            <main>
                <form class="grid grid-cols-2 md:gap-x-8 gap-4 mt-8" action="">
                    <label class="md:col-span-1 col-span-2">
                        <p class="text-gray-900 font-medium text-sm mb-1">First Name</p>
                        <input type="text">
                    </label>
                    <label class="md:col-span-1 col-span-2">
                        <p class="text-gray-900 font-medium text-sm mb-1">Last Name</p>
                        <input type="text">
                    </label>
                    <label class=" col-span-2">
                        <p class="text-gray-900 font-medium text-sm mb-1">Email</p>
                        <input type="text">
                    </label>
                    <label class=" col-span-2">
                        <p class="text-gray-900 font-medium text-sm mb-1">Phone Number</p>
                        <input type="text">
                        <p class="text-sm text-gray-600 mt-1">Please add your country code</p>
                    </label>
                    <label class="col-span-2">
                        <p class="text-gray-900 font-medium text-sm mb-1">Message</p>
                        <textarea placeholder="Leave us a message" />
                    </label>
                    <div class="grid grid-cols-2 col-span-2">
                        <p class="text-gray-900 col-span-2 font-medium text-sm mb-3">Services</p>
                        <label class="flex gap-2 md:col-span-1 col-span-2 cursor-pointer items-center">
                            <input type="radio" name="service"/>
                            <p class="text-gray-900 font-medium text-sm mb-1">Web Development</p>
                        </label>
                        <label class="flex gap-2 md:col-span-1 col-span-2 cursor-pointer items-center">
                            <input type="radio" name="service"/>
                            <p class="text-gray-900 font-medium text-sm mb-1">Content Creation</p>
                        </label>
                    </div>
                    <button class="button-primary mt-4 col-span-2">Submit</button>

                </form>
            </main>
        </div>
</div>
</section>
