---
type Props  = {
    className?:string;
    color:'blue'|'purple'|'orange';
}

const {className,color} = Astro.props;
const chipColor = ()=>{
    if(color=='blue')
    return "bg-blue-100 text-blue-600 border  border-blue-100"
    if(color=='purple')
    return "bg-purple-100 text-purple-600 border  border-purple-100 "
    if(color=='orange')
    return "bg-orange-100 text-orange-600 border  border-orange-100 "

    return "bg-blue-100 text-blue-600 border  border-blue-100"
}

---
<div class:list={[className,chipColor(),"text-sm  font-medium px-2 py-0.5 rounded-full"]}>
    <slot/>
</div>