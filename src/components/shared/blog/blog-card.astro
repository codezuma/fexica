---
interface Props  {
    className?:string;
    title: string
date: string
imageSrc: string
altText: string
description: string
tags: string[]
}
import {cn} from "../../../lib/utils";

import ArrowUpRight from '../../../icons/arrow-up-right.astro';
import Avatar from '../../ui/avatar.astro';
const {className,title,altText,description,imageSrc,tags} = Astro.props;
---

<article class:list={cn(["flex flex-col",className])}>
    <figure class="rounded-xl overflow-hidden mb-6 w-full">
        <img class="max-h-[300px] min-h-[220px]  transition-all bg-gray-200 w-full object-cover hover:scale-100 scale-105" src={imageSrc} alt={altText}>
    </figure>
    <header>
        <h3 class="font-semibold text-primary text-xs mb-2 capitalize"> {tags.map((tag,index)=>`${tag}${index==tags.length-1?'':` â€¢ `}`)}</h3>
        <div class="flex justify-between items-center mb-2">
            <h2 class="text-2xl font-semibold line-clamp-1 text-ellipsis  text-gray-900">{ title }</h2>
            <span><ArrowUpRight /></span>
        </div>
        <p class="text-gray-600 mb-4 font-medium">{description }</p>
        <div class="flex gap-4">
            <Avatar src={imageSrc}/>
            <div>
                <h2 class="font-semibold text-gray-900">Rene Wells</h2>
                <h2 class="text-sm text-gray-600">Content Writer</h2>
            </div>
        </div>
    </header>
</article>
